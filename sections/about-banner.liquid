<!----------------- about banner ------------------->
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="about-image-text section-{{ section.id }}-padding">
        <div class="row">
          <div class="col-4">
            <div class="about-text">
              <div class="about-text-items">
                 {%- if section.settings.sub_title != blank -%}
                   <h5 class="sub-title">{{ section.settings.sub_title }}</h5>
                 {% endif %}
                 {%- if section.settings.title != blank -%}
                    <h1 class="title">{{ section.settings.title }}</h1>
                  {% endif %}
                {%- if section.settings.description != blank -%}
                  <div class="description">{{ section.settings.description }}</div>
                {% endif %}
              </div>
            </div>
          </div>
          <div class="col-8">
             <div class="about-image">
                 {%- if section.settings.about_image != blank -%}
                  <img src="{{ section.settings.about_image | img_url: '' }}" alt="about_image" >
                {% endif %}
             </div>
          </div>
        </div>
    </section>
    

{% style %}
.about-image-text .row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-end;
    align-content: flex-end;
}
.about-image-text .col-4{
  width:32%;
}
.about-image-text .col-8{
  width:68%;
}
.about-image-text  .about-image img{
  width:100%;
  display:block;
  height:548px;
  object-fit:cover;
}
.about-image-text  .about-text-items .sub-title{
  font-family: "Gilroy";
  font-weight:bold;
  font-size: 16px;
  line-height: 24px;
  letter-spacing: -0.01em;
  color:#E72027;
  margin:0;
  text-transform: uppercase;
}
.about-image-text  .about-text-items .title{
  font-family: "Gilroy";
  font-weight:bold;
  font-size: 54px;
  line-height: 62px;
  letter-spacing: -0.02em;
  color:#211E23;
  margin-top:6px;
  margin-bottom:14px;
}
 .about-image-text  .about-text-items .description p{
  font-family:var(--font-body-family);
  font-size: 18px;
  font-weight: 400;
  line-height: 30px;
  letter-spacing: -0.02em;
  color:#211E23;
  margin:0;
}
.about-image-text .about-text{
  padding:45px 40px;
  position:relative;
}
.about-image-text .about-text-items {
    z-index: 1;
    position: relative;
}
.about-image-text .about-text:after {
    content: '';
    position: absolute;
    width: 110%;
    height: 100%;
    background: #fff;
    top: 0;
    left: 0;
    z-index: 0;
    display:none;
}

/******************** Responsive ***********************/
@media screen and (max-width:1024px){
.about-image-text .col-4{
  width:100%;
  order:2;
}
.about-image-text .col-8{
  width:100%;
  order:1;
}
.about-image-text .about-text:after {
    content: '';
    position: absolute;
    width: 100%;
    height: 120%;
    background: #fff;
    top: unset;
    left: 0;
    z-index: 0;
    bottom: 0;
}
.about-image-text .about-text {
    padding: 48px 24px;
    position: relative;
    max-width: 688px;
    margin: 0 auto;
    padding-top:0px;
    text-align:center;
}
.about-image-text  .about-image img {
    height:500px;
}
.about-image-text  .about-text-items .title {
    font-size: 40px;
    line-height: 48px;
}
}

@media screen and (max-width:767px) {
  .about-image-text .about-text:after {
    display:none;
}
.about-image-text .about-text {
    max-width:100%;
    padding-bottom:0px;
}
 .about-image-text .about-text-items {
    padding: 48px 0px;
    position: relative;
    max-width: 100%;
    margin: 0 auto;
    padding-top: 0px;
    text-align: center;
}
.about-image-text .about-text-items:after{
    content: '';
    position: absolute;
    width: 100%;
    height: 106%;
    background: #fff;
    top: unset;
    left: 0;
    z-index:-1;
    bottom: 0;
  }
.about-image-text  .about-image img {
    height: 364px;
}
}
{% endstyle %}


{% schema %}
  {
    "name": "About Banner",
    "settings": [
       {
          "type": "text",
          "id": "sub_title",
          "label": "Sub Title"
        },
      {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
      {
          "type": "richtext",
          "id": "description",
          "label": "Description "
        },
      {
          "type": "image_picker",
          "id": "about_image",
          "label": "Image"
        },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "presets": [
      {
        "name": "About Banner",
      }
  ]
  }
{% endschema %}