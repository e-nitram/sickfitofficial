{% schema %}
  {
    "name": "Refund Policy",
    "settings": [
        {
        "type": "text",
        "id": "heading",
        "label": "Heading"
       },
       {
        "type": "richtext",
        "id": "description",
        "label": "Description"
       },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
