<!-----------featured section------------>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="feature-on  section-{{ section.id }}-padding">
   <div class="page-width">
      <div class="feature-on-section">
         <div class="row">
             <div class="col-4">
                <div class="feature-on-img">
                  {%- if section.settings.feature_image1 != blank -%}
                  <img src="{{ section.settings.feature_image1 | img_url: '' }}" alt="feartue-image" class="first-image">
                  {% endif %}
                  {%- if section.settings.feature_image2 != blank -%}
                    <div class="second-image">
                       <img src="{{ section.settings.feature_image2 | img_url: '' }}" alt="feartue-image" >   
                    </div>
                  
                 {% endif %}
                </div>
             </div>
             <div class="col-8">
                <div class="feature-on-content">
                  {%- if section.settings.heading != blank -%}
                   <h2 class="main-title">{{ section.settings.heading }}</h2>
                  {% endif %}
                    <ul class="logo-list">
                      {% for block in section.blocks %}
                        {% if block.settings.logo_image %}
                          <li class="logo-item">
                             <img src="{{ block.settings.logo_image | img_url: '' }}" alt="Logo">
                          </li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                </div>
             </div>
         </div>
      </div>
   </div>
</section>


{%- style -%}
  
.feature-on .row {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    flex-wrap: wrap;
    flex-direction: row;
    margin: 0px -15px;
}
.feature-on .col-8 {
    width:70%;
    padding:0 15px;
}
.feature-on .col-4 {
    width:30%;
    padding:0 15px;
}
.feature-on img {
   display:block;
    width:100%;
}
.feature-on .logo-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    align-content: center;
    flex-wrap: wrap;
    flex-direction: row;
    padding-left:0px;
    margin:0px -14px;
    row-gap:20px;
}
.feature-on .logo-list li {
    list-style:none;
    width:25%;
    padding:0px 14px;
}
.feature-on .logo-list li img {
    height:80px;
    object-fit:contain;
}
.feature-on .feature-on-img .second-image {
    display: block;
    width: 100%;
    border: 30px solid #fff;
    background-color:#fff;
    border-radius: 12px;
    position:absolute;
    left:50%;
    bottom:-21%;
    max-width:329px;
    height:276px;
    object-fit:cover;
}
.feature-on .feature-on-img img{
  border-radius:12px;
}
.feature-on .feature-on-img{
    position:relative;
    margin-bottom:70px;
}
.feature-on .main-title{
    text-align:center;
    margin-bottom:20px;
}
.feature-on .page-width{
  padding:0px 90px;
}
  /********iPad**********/
@media screen and (max-width:1280px)  {
  .feature-on .logo-list li img {
    height: 80px;
  }
  .feature-on .feature-on-img .second-image {
    bottom: -38%;
    max-width: 291px;
    height: 244px;
}
.feature-on .main-title {
    text-align: center;
    margin-bottom: 7px;
}
 
}
@media screen and (max-width:1024px) {
.feature-on .page-width{
  padding:0px 40px;
}
  .feature-on .col-8 {
    width:100%;
}
.feature-on .col-4 {
    width:100%;
}
.feature-on .feature-on-img .second-image {
    border:24px solid #fff;
    border-radius: 12px;
    position:unset;
    margin-left: -20%;
    margin-bottom: -10%;
}
.feature-on .first-image {
    display: block;
    width: 100%;
    max-width:333px;
}
.feature-on .feature-on-img {
    position: relative;
    padding-bottom: 70px;
    max-width: 491px;
    margin: 0 auto;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}
.feature-on .feature-on-img .second-image {
    border: 24px solid #fff;
    border-radius: 12px;
    position: unset;
    
}
.feature-on .feature-on-img .second-image {
    bottom: -38%;
    max-width: 248px;
    height: 191px;
}
 .feature-on{
   padding-top:78px;
   padding-bottom:45px;
 } 
}
@media screen and (max-width:767px) {
  .feature-on .first-image {
    max-width: 308px;
}
.feature-on .feature-on-img .second-image {
    margin-left: -30%;
    margin-bottom: -13%;
} 
.feature-on .logo-list li img {
    height: 100%;
    aspect-ratio: 3/2;
} 
 .feature-on .page-width{
  padding:0px 24px;
} 
.feature-on{
   padding-top:50px;
   padding-bottom:24px;
 }  
}
@media screen and (max-width:460px){
  .feature-on .first-image {
    max-width: 240px;
}
 
.feature-on .feature-on-img .second-image {
    bottom: -38%;
    max-width: 200px;
    height: 160px;
    margin-left: -40%;
    margin-bottom: -16%;
}
} 



{%- endstyle -%}




{% schema %}
  {
    "name": "Feature On",
    "settings": [
       {
          "type": "image_picker",
          "id": "feature_image1",
          "label": "Feature Image1"
        },
       {
          "type": "image_picker",
          "id": "feature_image2",
          "label": "Feature Image2"
        },
      {
          "type": "text",
          "id": "heading",
          "label": "Title"
        },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image",
          "info": "Upload a logo image."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature On",
    }
  ]
  }
{% endschema %}