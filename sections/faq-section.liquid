<!-------- Faq section ----------->
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="main-faq-section section-{{ section.id }}-padding">
     <div class="page-width">
       <div class="faq-main-title">
         {%- if section.settings.sub_heading != blank -%}
           <h6 class="sub-title">
             {{ section.settings.sub_heading }}
           </h6>
         {% endif %}
          {%- if section.settings.heading != blank -%}
           <h1 class="main-title">
             {{ section.settings.heading }}
           </h1>
         {% endif %}
         {%- if section.settings.description != blank -%}
            <div class="description">
              {{ section.settings.description }}
            </div>
        {% endif %}
       </div>
       <div class="main-faq-menu">
          {% if linklists['faq-menu'].links.size > 0 %}
            <ul class="faq-menu">
              {% for link in linklists['faq-menu'].links %}
                <li>
                  <a href="{{ link.url }}" class="tab-faq">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
         
       </div>
       
     </div>  
</section>

{% style %}
.main-faq-section .faq-main-title .sub-title{
    font-family: "Gilroy";
    font-weight:bold;
    font-size: 16px;
    line-height: 24px;
    color:rgba(231, 32, 39, 1);
    letter-spacing: -0.01em;
    margin:0;
} 
.main-faq-section .faq-main-title .main-title{
    font-size:54px;
    line-height: 62px;
    margin-bottom:0;
    margin-top:6px;
}
.main-faq-section .faq-main-title{
  width:100%;
  max-width:830px;
  margin:0 auto;
  text-align:center;
  padding-bottom:48px;
}
.main-faq-section .main-faq-menu .faq-menu li .tab-faq.active{
  color: #e72027;
}
.main-faq-section .main-faq-menu .faq-menu li .tab-faq.active:after{
  left: 0;
  width: 100%;
}
/* .main-faq-section .main-faq-menu {
    width: 100%;
    max-width: 790px;
    margin: 0 auto;
} */
.main-faq-section .main-faq-menu .faq-menu{
  display:flex;
  padding-left:0px;
  margin:0;
  justify-content: center;
}
.main-faq-section .main-faq-menu .faq-menu li{
  list-style:none;
  margin-right:64px;
  position:relative;
  line-height:32px;
}
.main-faq-section .main-faq-menu .faq-menu li:last-child{
  margin-right:0px;
}

.main-faq-section .main-faq-menu .faq-menu li a{
  text-decoration:none;
  font-family: "Gilroy";
  font-weight:bold;
  font-size: 20px;
  line-height:32px;
  color:rgba(33, 30, 35, 1);
  letter-spacing: -0.01em;
  position:relative;
  transition: .5s ease-out;
  padding-bottom:6px;
}
.main-faq-section .main-faq-menu .faq-menu li a:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0%;
    height: 3px;
    background-color: #e72027;
    transition: .5s ease-out;
}
.main-faq-section .main-faq-menu .faq-menu li a:hover{
    color: #e72027;
  }
.main-faq-section .main-faq-menu .faq-menu li a:hover:after {
    left: 0;
    width: 100%;
}

@media screen and (max-width:1024px){
  .main-faq-section .faq-main-title .main-title {
    font-size: 42px;
    line-height: 54px;
  }
  .main-faq-section .main-faq-menu .faq-menu li {
    margin-right: 34px;
  }
  .main-faq-menu {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
}

.faq-menu {
  display: flex;
  white-space: nowrap; /* Prevents line breaks */
}

.faq-menu li {
  flex: 0 0 auto; /* Prevents the items from stretching */
}
  
}
@media screen and (max-width:767px){
  .main-faq-section .faq-main-title .main-title {
    font-size: 40px;
    line-height:48px;
  }
}
@media screen and (max-width:420px){
  .main-faq-section .faq-main-title .main-title {
    font-size:34px;
    line-height:40px;
  }
}

  
{% endstyle %}

{% schema %}
  {
    "name": "Faq Section",
    "settings": [
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading"
       },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
       },
       {
        "type": "richtext",
        "id": "description",
        "label": "Description"
       },
      {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
     },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
  "presets": [
    {
      "name": "Faq Section",
    }
  ]
  }
{% endschema %}