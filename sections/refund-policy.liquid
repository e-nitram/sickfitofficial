        "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }

    ],
  "blocks": [
    {
      "type": "list",
      "name": "List",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "list",
          "label": "List"
        },
        {
          "type": "text",
          "id": "quote",
          "label": "Quote Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Refund Policy",
    }
  ]
  }
{% endschema %}